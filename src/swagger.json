{
  "openapi": "3.0.0",
  "info": {
    "title": "AlugCar Documentação",
    "description": "Documentação da API AlugCar",
    "version": "1.0.0",
    "contact": {
      "email": "renan@teste.com"
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "security": [],
        "summary": "Create a user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": { "$ref": "#definitions/User" },
                "$ref": "#definitions/UserExample"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Created" },
          "409": { "description": "User Already exists!" }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "List all users",
        "description": "List all users",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {          
                    "$ref": "#definitions/User"
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/sessions": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a sessions",
        "description": "Create a new temporary sessions",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": { "$ref": "#definitions/Session" },
                "$ref": "#definitions/SessionExample"
              }
            }
          }
        },
        "responses": {
          "201": { 
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "409": { "description": "User Already exists!" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/categories": {
      "post": {
        "tags": ["Categories"],
        "summary": "Create a category",
        "description": "Create a new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": { "$ref": "#definitions/Categories" },
                "$ref": "#definitions/CategoriesExample"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Created" },
          "500": { "description": "Category Already exists!" },
          "401": { "description": "Unauthorized" }
        }
      },
      "get": {
        "tags": ["Categories"],
        "summary": "List all categories",
        "description": "List all categories",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {          
                    "$ref": "#definitions/Categories"
                  }
                }
              }
            }
          },
          "204": { "description": "No existing category!" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/categories/import": {
      "post": {
        "tags": ["Categories"],
        "summary": "Upload a new category",
        "description": "Upload a new category",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "file",
                    "formar": "binary"
                  }
                }
              }
            }
          }      
        },
        "responses": {
          "200": { 
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": ["created", "exists"],
                        "description": "If the category was created, the 'type' property receives 'created', otherwise 'type' receives 'exists'"
                        
                      },
                      "name": {
                        "type": "string"
                      }
                    } 
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Empty or badly fomatted file!"
                    },
                    "model": {
                      "type": "string",
                      "example": "http://localhost:4444/categories/download"
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/categories/download": {
      "get": {
        "tags": ["Categories"],
        "summary": "Download model CSV",
        "description": "Download model CSV",
        "responses": {
          "200": {
            "description": "Success",
            "body": {
              "content-disposition": {
                "type": "CSV",
                "description": "model_import_category"
              }
            }
          },
          "400": { "description": "Empty or badly fomatted file!" },
          "409": { "description": "Internal server error!" }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": ["Specifications"],
        "summary": "Create a specification",
        "description": "Create a new specification",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": { "$ref": "#definitions/Specifications" },
                "$ref": "#definitions/SpecificationsExample"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Created" },
          "500": { "description": "Specification Already exists" },
          "401": { "description": "Unauthorized" }
        }
      },
      "get": {
        "tags": ["Specifications"],
        "summary": "List all spefifications",
        "description": "List all spefifications",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {          
                    "$ref": "#definitions/Specifications"
                  }
                }
              }
            }
          },
          "204": { "description": "No content" },
          "401": { "description": "Unauthorized" }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "driver_license": {
          "type": "string"
        }
      }
    },
    "UserExample": {
      "example": {
        "name": "Seu nome",
        "email": "seu@email.com",
        "password": "suasenha",
        "driver_license": "0000-x"
      }
    },
    "Session": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "SessionExample": {
      "example": {
        "email": "seu@email.com",
        "password": "suasenha"
      }
    },
    "Categories": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "CategoriesExample": {
      "example": {
        "name": "SEDAN",
        "description": "Carro com porta mala grande"
      }
    },
    "CategoryImport": {
      "type": "object",
      "properties": {
        "file CSV": {
          "type": "file",
          "formar": "binary"
        }
      }
    },
    "CategoryDownload": {
      "type": "object",
      "properties": {
        "file CSV": {
          "type": "file",
          "formar": "binary"
        }
      }
    },
    "Specifications": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "SpecificationsExample": {
      "example": {
        "name": "Câmbio automático",
        "description": "Carro com troca de marcha automática"
      }
    }
  }
}