{
  "openapi": "3.0.0",
  "info": {
    "title": "AlugCar Documentação",
    "description": "Documentação da API AlugCar",
    "version": "1.0.0",
    "contact": {
      "email": "renan@alugcar.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Categories"],
        "summary": "Create a category",
        "description": "Create a new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": { "$ref": "#definitions/Categories" },
                "$ref": "#definitions/CategoriesExample"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Created" },
          "500": { "description": "Category Already exists" }
        }
      },
      "get": {
        "tags": ["Categories"],
        "summary": "List all categories",
        "description": "List all categories",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {          
                    "$ref": "#definitions/Categories"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/import": {
      "post": {
        "tags": ["Categories"],
        "summary": "Upload a new category",
        "description": "Upload a new category",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#definitions/CategoryImport"
              }
            }
          }      
        },
        "responses": {
          "201": { "description": "Created" }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": ["Spefifications"],
        "summary": "Create a specification",
        "description": "Create a new specification",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": { "$ref": "#definitions/Specifications" },
                "$ref": "#definitions/SpecificationsExample"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Created" },
          "500": { "description": "Specification Already exists" }
        }
      },
      "get": {
        "tags": ["Spefifications"],
        "summary": "List all spefifications",
        "description": "List all spefifications",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {          
                    "$ref": "#definitions/Specifications"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Categories": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "CategoriesExample": {
      "example": {
        "name": "SEDAN",
        "description": "Carro com porta mala grande"
      }
    },
    "CategoryImport": {
      "type": "object",
      "properties": {
        "file CSV": {
          "type": "file",
          "formar": "binary"
        }
      }
    },
    "Specifications": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "SpecificationsExample": {
      "example": {
        "name": "Câmbio automático",
        "description": "Carro com troca de marcha automática"
      }
    }
  }
}